{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2016",
        "outDir": "./dist",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
        //     "types/*": ["./src/types/*"],
        //     "@modules/*": ["./src/modules/*"],
            "@config/*": ["./src/config/*"],
        //     "@utils/*": ["./src/utils/*"]
        },
        "declaration": true,
    },
    "include": ["./src/**/*"]
}